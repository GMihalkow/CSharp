@using Eventures.Web.ViewModels.Events;
@model CreateEventInputModel;

<main class="mt-5">

    @if(Model != null)
    {
        @await Html.PartialAsync("Error", new ErrorViewModel { ErrorMessage = "Event with this name already exists." });
    }

    <h1 class="text-center text-eventure">Create Event</h1>if
    <form class="mx-auto half-width text-center" asp-controller="Events" asp-action="Create">
        <hr class="bg-eventure hr-eventure mt-5" />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="row">
            <div class="col-md-6 form-group text-center">
                <label asp-for="Name">Name</label>
                <input asp-for="Name" class="form-control" placeholder="Name...">
                <span asp-validation-for="Name"></span>
            </div>
            <div class="col-md-6 form-group text-center">
                <label asp-for="Place">Place</label>
                <input asp-for="Place" class="form-control" placeholder="Place...">
                <span asp-validation-for="Place"></span>
            </div>
        </div>
        <hr class="bg-eventure hr-eventure" />
        <div class="row">
            <div class="col-md-6 form-group text-center">
                <label asp-for="Start">Start</label>
                <input asp-for="Start" class="form-control" placeholder="Start Date...">
                <span asp-validation-for="Start"></span>
            </div>
            <div class="col-md-6 form-group text-center">
                <label asp-for="End">End</label>
                <input asp-for="End" class="form-control" placeholder="End Date..." />
                <span asp-validation-for="End"></span>
            </div>
        </div>
        <hr class="bg-eventure hr-eventure" />
        <div class="row">
            <div class="col-md-6 form-group text-center">
                <label asp-for="TotalTickets">TotalTickets</label>
                <input asp-for="TotalTickets" class="form-control" placeholder="Total tickets..." />
                <span asp-validation-for="TotalTickets"></span>
            </div>
            <div class="col-md-6 form-group text-center">
                <label asp-for="PricePerTicket">PricePerTicket</label>
                <input type="number" step="0.01" asp-for="PricePerTicket" class="form-control" placeholder="Price per ticket...">
                <span asp-validation-for="PricePerTicket"></span>
            </div>
        </div>
        <hr class="bg-eventure hr-eventure" />
        <div class="button-holder d-flex justify-content-center text-center">
            <button type="submit" class="btn bg-eventure">Create Event</button>
        </div>
    </form>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }

</main>