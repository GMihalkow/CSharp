@if (this.User.Identity.IsAuthenticated)
{
    <main>
        <div id="index-container" class="text-center container-fluid bg-eventure">
            <h1>Welcome, @this.User.Identity.Name!</h1>
            <hr class="hr-eventure bg-gray" />
            <h2 class="text-gray">Eventures wishes you an exciting experience.</h2>
        </div>
    </main>
}
else
{
    <main>
        <div id="index-container" class="container-fluid bg-eventure p-5">
            <h1>Eventures - The best ticket service in the world.</h1>
            <hr class="hr-eventure bg-black" />
            <h2><a asp-controller="Accounts" asp-action="Login">Login</a> to start "eventing".</h2>
            <h2><a asp-controller="Accounts" asp-action="Register">Register</a> if you don't have an acoount.</h2>
        </div>
    </main>
}