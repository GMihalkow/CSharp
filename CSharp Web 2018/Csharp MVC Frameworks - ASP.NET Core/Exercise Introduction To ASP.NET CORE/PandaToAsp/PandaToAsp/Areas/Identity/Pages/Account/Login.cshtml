@page
@model LoginModel

<main class="mt-3">
    <h1 class="text-center text-torshia">Login</h1>
    <hr class="bg-panda w-50 hr-2" />
    <form class="mx-auto w-50" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Input.Username" class="text-panda"></label>
            <input type="text" class="form-control" placeholder="Username..." name="username">
            <span asp-validation-for="Input.Username"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.Password" class="text-panda"></label>
            <input type="password" class="form-control" placeholder="Password..." name="password">
            <span asp-validation-for="Input.Password"></span>
        </div>
        <div class="button-holder d-flex justify-content-center">
            <button type="submit" class="btn bg-panda text-white">Login</button>
        </div>
    </form>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
