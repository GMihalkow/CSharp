@page
@model RegisterModel

<main class="mt-3">
    <h1 class="text-center text-torshia">Register</h1>
    <hr class="bg-panda w-50 hr-2" />
    <form class="mx-auto w-50" method="post" asp-route-returnUrl="@Model.ReturnUrl">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Input.Username" class="text-panda">Username</label>
            <input asp-for="Input.Username" type="text" class="form-control" placeholder="Username..." name="username">
            <span asp-validation-for="Input.Username" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.Password" class="text-panda">Password</label>
            <input asp-for="Input.Password" type="password" class="form-control" placeholder="Password..." name="password">
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.ConfirmPassword" class="text-panda">Confirm Password</label>
            <input asp-for="Input.ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password..." name="confirmPassword">
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.Email" class="text-panda">Email</label>
            <input asp-for="Input.Email" type="email" class="form-control" placeholder="Email..." name="email">
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="button-holder mt-4 d-flex justify-content-center">
            <button type="submit" class="btn bg-panda text-white">Register</button>
        </div>
    </form>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
