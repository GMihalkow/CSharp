@using Panda.Models;

@model  PandaUser[]

<main class="mt-3">
    <h1 class="text-center text-torshia">Create Package</h1>
    <hr class="bg-panda w-50 hr-2" />
    <form class="mx-auto w-50" method="post" action="/packages/create">
        <div class="form-group">
            <label for="description" class="text-panda">Description</label>
            <input type="text" class="form-control" id="description" placeholder="Description..." name="description">
        </div>
        <div class="row">
            <div class="col-md-5">
                <label for="weight" class="text-panda">Weight</label>
                <input type="number" step="0.01" class="form-control" id="weight" placeholder="Weight..." name="weight">
            </div>
            <div class="col-md-2"></div>
            <div class="col-md-5">
                <label for="shippingAddress" class="text-panda">Shipping Address</label>
                <input type="text" class="form-control" id="shippingAddress" placeholder="Shipping Address..." name="shippingAddress">
            </div>
        </div>
        <hr class="bg-panda hr-2" />
        <div class="form-group mx-auto w-50">
            <label class="text-center" for="recepient">Recepient</label>
            <select class="form-control" id="recepient" name="recepient">
                <option selected disabled>--Choose Recipient--</option>
                @foreach (var recepient in Model)
                {
                    <option value="@recepient.UserName">@recepient.UserName</option>
                }
            </select>
        </div>
        <hr class="bg-panda hr-2" />
        <div class="button-holder mt-4 d-flex justify-content-center">
            <button type="submit" class="btn bg-panda text-white">Create</button>
        </div>
    </form>
</main>